<UserControl x:Class="Balatron.Views.DirectModificationEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto" Margin="0,0,0,5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0">
            <TextBlock Name="OptionNameTextBlock" Margin="0,0,5,0" Foreground="{StaticResource BalatroWhite}"/>
            <TextBlock Text=": " VerticalAlignment="Center" Foreground="{StaticResource BalatroWhite}"/>
            <TextBlock Name="ValueTextBlock" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="{StaticResource BalatroWhite}"/>
        </StackPanel>
        <Button Name="ModifyButton" Content="Modify Value" Click="ModifyButton_Click" Grid.Column="1"
                HorizontalAlignment="Stretch" VerticalAlignment="Center" />
    </Grid>
</UserControl>
