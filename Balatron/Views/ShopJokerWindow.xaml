<Window x:Class="Balatron.Views.ShopJokerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:Balatron.Models"
        Title="Shop Jokers" Height="300" Width="650">
    <Window.Icon>
        <BitmapImage UriSource="pack://application:,,,/Balatron;component/Resources/app_icon.ico"/>
    </Window.Icon>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
        <ItemsControl ItemsSource="{Binding ShopJokers}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type models:JokerViewModel}">
                    <Border BorderBrush="Gray"
                            BorderThickness="1"
                            Padding="5"
                            Margin="5">
                        <StackPanel MinWidth="200">
                            <TextBlock Text="{Binding SlotLabel}"
                                       FontWeight="Bold"
                                       TextAlignment="Center"
                                       Padding="0 0 0 4" />
                            <TextBlock Text="{Binding Label}"
                                       TextAlignment="Center"
                                       Padding="0 0 0 4" />
                            <TextBlock Text="{Binding Effect}"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Padding="0 0 0 6" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 4">
                                <TextBlock Text="Rank:" />
                                <TextBlock Text="{Binding Rank}" Margin="4 0 10 0" />
                                <TextBlock Text="Sort:" />
                                <TextBlock Text="{Binding SortId}" Margin="4 0 0 0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 6">
                                <TextBlock Text="{Binding CostLabel}" Margin="0 0 6 0" />
                                <TextBlock Text="{Binding BaseCostLabel}" />
                            </StackPanel>
                            <TextBlock Text="{Binding ExtraCostLabel}"
                                       TextAlignment="Center"
                                       Margin="0 0 0 6" />
                            <Button Content="Import Joker"
                                    Command="{Binding ExchangeCommand}"
                                    HorizontalAlignment="Stretch"
                                    Padding="6 2"
                                    Margin="0 0 0 4" />
                            <Button Content="Export Joker"
                                    Command="{Binding ExportCommand}"
                                    HorizontalAlignment="Stretch"
                                    Padding="6 2" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Window>
