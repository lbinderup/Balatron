<Window x:Class="Balatron.Views.JokerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:Balatron.Models"
        Title="Joker List" Height="350" Width="700">
    <Window.Icon>
        <BitmapImage UriSource="pack://application:,,,/Balatron;component/Resources/app_icon.ico"/>
    </Window.Icon>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
        <ItemsControl ItemsSource="{Binding Jokers}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type models:JokerViewModel}">
                    <Border BorderBrush="Gray"
                            BorderThickness="1"
                            Padding="5"
                            Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border Width="85"
                                    Height="114"
                                    Margin="0 0 10 0"
                                    VerticalAlignment="Top"
                                    Background="#11000000"
                                    ClipToBounds="True">
                                <Grid>
                                    <ItemsControl ItemsSource="{Binding SpriteLayers}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Grid />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding}"
                                                       HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Stretch"
                                                       Stretch="Uniform"
                                                       RenderOptions.BitmapScalingMode="NearestNeighbor" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Border>
                            <StackPanel Grid.Column="1" MinWidth="180">
                                <TextBlock Text="{Binding SlotLabel}"
                                           FontWeight="Bold"
                                           TextAlignment="Left"
                                           Padding="0 0 0 4" />
                                <TextBlock Text="{Binding Label}"
                                           TextAlignment="Left"
                                           Padding="0 0 0 4" />
                                <TextBlock Text="{Binding Effect}"
                                           TextWrapping="Wrap"
                                           TextAlignment="Left"
                                           Padding="0 0 0 6" />
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 4">
                                    <TextBlock Text="Rank:" />
                                    <TextBlock Text="{Binding Rank}" Margin="4 0 10 0" />
                                    <TextBlock Text="Sort:" />
                                    <TextBlock Text="{Binding SortId}" Margin="4 0 0 0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 4">
                                    <ToggleButton Content="{Binding EternalToggleLabel}"
                                                  Command="{Binding ToggleEternalCommand}"
                                                  IsChecked="{Binding IsEternal, Mode=OneWay}"
                                                  Padding="6 2"
                                                  Margin="0 4 4 4" />
                                    <ToggleButton Content="{Binding RentalToggleLabel}"
                                                  Command="{Binding ToggleRentalCommand}"
                                                  IsChecked="{Binding IsRental, Mode=OneWay}"
                                                  Padding="6 2"
                                                  Margin="0 4 4 4" />
                                    <ToggleButton Content="{Binding PerishableToggleLabel}"
                                                  Command="{Binding TogglePerishableCommand}"
                                                  IsChecked="{Binding IsPerishable, Mode=OneWay}"
                                                  Padding="6 2"
                                                  Margin="0 4 4 4" />
                                    <Button Content="Set Turns"
                                            Command="{Binding EditPerishTallyCommand}"
                                            Padding="6 2"
                                            Margin="0 4 0 4" />
                                </StackPanel>
                                <TextBlock Text="{Binding PerishableLabel}"
                                           TextAlignment="Left"
                                           Margin="0 0 0 6" />
                                <StackPanel Orientation="Vertical" Margin="0 0 0 6">
                                    <TextBlock Text="Edition" TextAlignment="Left" />
                                    <ComboBox ItemsSource="{Binding EditionOptions}"
                                              SelectedItem="{Binding SelectedEdition}"
                                              HorizontalAlignment="Left"
                                              Width="140"
                                              Margin="0 4 0 0" />
                                </StackPanel>
                                <Button Content="Import Joker"
                                        Command="{Binding ExchangeCommand}"
                                        HorizontalAlignment="Stretch"
                                        Padding="3 0 3 0"
                                        Margin="0 0 0 4" />
                                <Button Content="Export Joker"
                                        Command="{Binding ExportCommand}"
                                        HorizontalAlignment="Stretch"
                                        Padding="3 0 3 0"
                                        Margin="0 0 0 4" />
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 4 0 0">
                                    <TextBlock Text="{Binding SellCostLabel}" Margin="0 0 6 0" />
                                    <Button Content="Edit"
                                            Command="{Binding EditSellCostCommand}"
                                            Padding="3 0 3 0" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Window>