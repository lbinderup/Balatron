<Window x:Class="Balatron.Views.JokerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:Balatron.Models"
        Title="Joker List"
        Height="520"
        Width="740"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">
    <Window.Icon>
        <BitmapImage UriSource="pack://application:,,,/Balatron;component/Resources/app_icon.ico" />
    </Window.Icon>
    <Border Margin="12"
            Background="{StaticResource BalatroDark}"
            BorderBrush="{StaticResource BalatroShadow}"
            BorderThickness="3"
            CornerRadius="18">
        <Grid TextElement.Foreground="{StaticResource BalatroWhite}">
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Background="{StaticResource BalatroPanel}"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Joker List"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Margin="16,0,0,0" />
                <Button Grid.Column="1"
                        Content="â€”"
                        Width="36"
                        Height="28"
                        Margin="0,8,8,8"
                        Background="{StaticResource BalatroBlue}"
                        Click="MinimizeButton_Click" />
                <Button Grid.Column="2"
                        Content="X"
                        Width="36"
                        Height="28"
                        Margin="0,8,12,8"
                        Background="{StaticResource BalatroRed}"
                        Click="CloseButton_Click" />
            </Grid>
            <ScrollViewer Grid.Row="1"
                          Margin="16"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Jokers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:JokerViewModel}">
                            <Border BorderBrush="{StaticResource BalatroShadow}"
                                    BorderThickness="2"
                                    Background="{StaticResource BalatroPanel}"
                                    Padding="8"
                                    Margin="6"
                                    CornerRadius="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0 0 10 0">
                                        <Border Width="85"
                                                Height="114"
                                                HorizontalAlignment="Center"
                                                Background="#11000000"
                                                ClipToBounds="True">
                                            <Grid>
                                                <ItemsControl ItemsSource="{Binding SpriteLayers}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <Grid />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Image Source="{Binding}"
                                                                   HorizontalAlignment="Stretch"
                                                                   VerticalAlignment="Stretch"
                                                                   Stretch="Uniform"
                                                                   RenderOptions.BitmapScalingMode="NearestNeighbor" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </Grid>
                                        </Border>

                                        <UniformGrid Columns="1" Margin="0 4 0 4">
                                            <ToggleButton Content="{Binding EternalToggleLabel}"
                                                          Command="{Binding ToggleEternalCommand}"
                                                          IsChecked="{Binding IsEternal, Mode=OneWay}"
                                                          Padding="2" Margin="1" />
                                            <ToggleButton Content="{Binding RentalToggleLabel}"
                                                          Command="{Binding ToggleRentalCommand}"
                                                          IsChecked="{Binding IsRental, Mode=OneWay}"
                                                          Padding="2" Margin="1" />
                                            <ToggleButton Content="{Binding PerishableToggleLabel}"
                                                          Command="{Binding TogglePerishableCommand}"
                                                          IsChecked="{Binding IsPerishable, Mode=OneWay}"
                                                          Padding="2" Margin="1" />
                                            <Button Content="Turns"
                                                    Command="{Binding EditPerishTallyCommand}"
                                                    ToolTip="Set Perishable Turns"
                                                    Padding="2" Margin="1" />
                                        </UniformGrid>

                                        <TextBlock Text="{Binding PerishableLabel}"
                                                   TextAlignment="Center"
                                                   FontSize="10"
                                                   TextWrapping="Wrap"
                                                   MaxWidth="90" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" MinWidth="150" VerticalAlignment="Top">
                                        <TextBlock Text="{Binding SlotLabel}"
                                                   TextAlignment="Left"
                                                   Padding="0 0 0 4" />
                                        <TextBlock Text="{Binding Label}"
                                                   TextAlignment="Left"
                                                   Padding="0 0 0 4" />

                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 4">
                                            <TextBlock Text="Rank:" />
                                            <TextBlock Text="{Binding Rank}" Margin="4 0 10 0" />
                                            <TextBlock Text="Sort:" />
                                            <TextBlock Text="{Binding SortId}" Margin="4 0 0 0" />
                                        </StackPanel>

                                        <Grid Margin="0 0 0 6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                       Text="Edition"
                                                       VerticalAlignment="Center"
                                                       Margin="0 0 10 0"/>
                                            <ComboBox Grid.Column="1"
                                                      ItemsSource="{Binding EditionOptions}"
                                                      SelectedItem="{Binding SelectedEdition}"
                                                      HorizontalAlignment="Stretch" />
                                        </Grid>

                                        <StackPanel Orientation="Horizontal" Margin="0 0 0 4">
                                            <TextBlock Text="{Binding SellCostLabel}" Margin="0 0 6 0" />
                                            <Button Content="Edit"
                                                    Command="{Binding EditSellCostCommand}"
                                                    Padding="3 0 3 0" />
                                        </StackPanel>

                                        <TextBlock Text="Exchange"
                                                   TextAlignment="Left"
                                                   Padding="0 10 0 4" />
                                        <Grid Margin="0 0 0 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Button Grid.Column="0"
                                                    Content="Import"
                                                    Command="{Binding ExchangeCommand}"
                                                    Margin="0 0 3 0"/>
                                            <Button Grid.Column="1"
                                                    Content="Export"
                                                    Command="{Binding ExportCommand}"
                                                    Margin="3 0 0 0"/>
                                        </Grid>

                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
